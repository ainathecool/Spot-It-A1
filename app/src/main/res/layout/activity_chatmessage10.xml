<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatmessage10">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="50dp"
            android:text="Miracle"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>


        <LinearLayout
            android:id="@+id/rowID"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/miracle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

           <TextView
               android:layout_width="80dp"
               android:layout_marginTop="15dp"
               android:layout_height="50dp"
               android:text="This is a sample message"
               android:paddingTop="10dp"
               android:background="@drawable/rounded_rectangle"
               android:layout_weight="0.5"/>

            <TextView
                android:layout_width="40dp"
                android:layout_marginTop="25dp"
                android:layout_height="50dp"
                android:text="18:58"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:textColor="#838282"
                android:layout_weight="0.1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:text="18:58"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:textColor="#838282"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_gravity="end"
                android:layout_width="80dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:text="This is a sample message"
                android:paddingTop="10dp"
                android:background="@drawable/rounded_rectangle_orange"
                android:layout_weight="0.5"/>


        </LinearLayout>

        <LinearLayout

            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/miracle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <TextView
                android:layout_width="80dp"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:text="This is a sample message"
                android:paddingTop="10dp"
                android:background="@drawable/rounded_rectangle"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="40dp"
                android:layout_marginTop="25dp"
                android:layout_height="50dp"
                android:text="18:58"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:textColor="#838282"
                android:layout_weight="0.1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/miracle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <TextView
                android:layout_width="80dp"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:text="This is a sample message"
                android:paddingTop="10dp"
                android:background="@drawable/rounded_rectangle"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="40dp"
                android:layout_marginTop="25dp"
                android:layout_height="50dp"
                android:text="18:58"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:textColor="#838282"
                android:layout_weight="0.1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:text="18:58"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:textColor="#838282"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_gravity="end"
                android:layout_width="80dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:text="This is a sample message"
                android:paddingTop="10dp"
                android:background="@drawable/rounded_rectangle_orange"
                android:layout_weight="0.5"/>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/relative1"
            >


            <TextView
                android:id="@+id/textReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write a reply..."
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="30dp"
                />

            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textReply"
                android:src="@drawable/baseline_photo_camera_24"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="5dp"
                />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textReply"
                android:layout_toRightOf="@id/camera"
                android:src="@drawable/baseline_image_24"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="5dp"
                />
            <ImageView
                android:id="@+id/drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textReply"
                android:layout_toRightOf="@id/image"
                android:src="@drawable/baseline_insert_drive_file_24"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textReply"
                android:layout_toRightOf="@id/drive"
                android:text="Send"
                android:textSize="20dp"
                android:textColor="#ff9800"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="190dp"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>