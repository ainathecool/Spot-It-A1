<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="230dp"
        android:layout_height="130dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="15dp"
        android:background="@drawable/featured_items" />

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/featured_item2">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="Item Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/locationImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:paddingLeft="10dp"
            android:src="@drawable/baseline_remove_red_eye_24" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_toRightOf="@+id/locationImage"
            android:paddingLeft="10dp"
            android:text="Islamabad"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/hourlyRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_toRightOf="@+id/itemName"
            android:paddingTop="5dp"
            android:text="$10/hr"
            android:textColor="#ff9800"
            android:textSize="15sp" />

        <!-- Assuming 'match' field in ItemModel contains date -->
        <TextView
            android:id="@+id/match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/location"
            android:text="7th Mar"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>
