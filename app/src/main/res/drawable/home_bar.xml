<!-- res/drawable/rounded_rectangle_with_dropdown.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item android:drawable="@drawable/rectangle" />
    <item

        android:bottom="20dp"
        android:drawable="@drawable/rounded_rectangle"
        android:height="3dp"
        android:gravity="top|center"/>

    <!-- Close icon -->
    <item
        android:id="@+id/home"
        android:drawable="@drawable/home__orange"
        android:gravity="top"
        android:left="20dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="40dp"
        android:bottom="30dp"
        />

    <!-- Outline light icon -->
    <item
        android:id="@+id/search"
        android:drawable="@drawable/search"
        android:gravity="top"
        android:bottom="30dp"
        android:left="100dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="80dp"
        />
    <item
        android:id="@+id/add"
        android:drawable="@drawable/add"
        android:gravity="top"
        android:bottom="30dp"
        android:left="170dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="100dp"
        />

    <!-- Time icon -->
    <item
        android:id="@+id/chat"
        android:drawable="@drawable/chat"
        android:gravity="top"
        android:bottom="30dp"
        android:left="240dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="20dp"
        />

    <!-- Cross icon -->
    <item
        android:id="@+id/profile"
        android:drawable="@drawable/profile"
        android:gravity="top"
        android:bottom="30dp"
        android:left="320dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="20dp"
        />
</layer-list>
