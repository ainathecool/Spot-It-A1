<!-- res/drawable/rounded_rectangle_with_dropdown.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item android:drawable="@drawable/rectangle" />
    <item
        android:top="10dp"
        android:bottom="20dp"
        android:drawable="@drawable/rounded_rectangle"
        android:height="5dp"
        android:width="30dp"
        android:gravity="top|center" />

    <!-- Close icon -->
    <item
        android:drawable="@drawable/mic_round_modified"
        android:gravity="top"
        android:left="80dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="40dp"
        android:bottom="30dp" />

    <!-- Outline light icon -->
    <item
        android:drawable="@drawable/speaker_round_modified"
        android:gravity="top"
        android:bottom="30dp"
        android:left="163dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="100dp" />

    <!-- Time icon -->
    <item
        android:drawable="@drawable/pause_round_modified"
        android:gravity="top"
        android:bottom="30dp"
        android:left="240dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="80dp" />

    <!-- Cross icon -->
    <item
        android:drawable="@drawable/cross_red_modified"
        android:gravity="center"
        android:top="100dp"
        android:left="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="20dp"
        android:bottom="20dp"   />
</layer-list>
