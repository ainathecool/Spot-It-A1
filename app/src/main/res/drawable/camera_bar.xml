<!-- res/drawable/rounded_rectangle_with_dropdown.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item android:drawable="@drawable/rectangle" />

    <!-- Close icon -->
    <item

        android:drawable="@drawable/gallery_round_modified"
        android:gravity="start|top"
        android:left="60dp"
        android:top="30dp"
        android:width="50dp"
        android:height="50dp"
        android:right="10dp" />

    <!-- Outline light icon -->
    <item
        android:drawable="@drawable/camera_round_modified"
        android:gravity="center|top"
        android:width="80dp"
        android:height="80dp"
        android:left="30dp"
        android:right="30dp"
        android:top="10dp" />

    <!-- Time icon -->
    <item
        android:drawable="@drawable/reverse_round_modified"
        android:gravity="end|top"
        android:width="50dp"
        android:height="50dp"
        android:left="10dp"
        android:right="60dp"
        android:top="30dp"/>
</layer-list>
