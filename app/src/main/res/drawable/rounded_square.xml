<!-- res/drawable/rounded_square.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fill color (white) -->
    <solid android:color="#FFFFFF" />

    <!-- Stroke (outline) color (light grey) and width (adjust as needed) -->
    <stroke
        android:color="#A8A8A8"
        android:width="2dp" /> <!-- Adjust the width as needed -->

    <!-- Rounded corners (adjust the radius for desired roundness) -->
    <corners android:radius="8dp" />
</shape>
